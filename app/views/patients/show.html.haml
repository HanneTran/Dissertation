-# Dashboard with pause graph


=link_to 'Back', patients_path, style: 'float:right; margin: 20px', class: 'btn btn-primary btn-md'
%h1 #{@patient.name} has patient id #{@patient.id}


=link_to 'Question', patient_questions_path(@patient) , style: 'float:centre; margin: 20px', class: 'btn btn-primary btn-lg'

=link_to 'Details', patient_detail_path(@patient) , style: 'float:centre; margin: 20px', class: 'btn btn-primary btn-lg'



%ul.nav.nav-tabs
  %li.active
    %a{:href => patient_path(@patient.id)} Pause
  %li
    %a{:href => patient_duration_path(@patient.id)} Duration
  %li
    %a{:href => patient_notop_path(@patient.id)} No of topics changed
  %li
    %a{:href => patient_empt_path(@patient.id)} Empty words
  %li
    %a{:href => patient_variety_path(@patient.id)} Variety of words

%br

= scatter_chart Feature.pluck(:pause, :patient_id), xtitle: "pause", ytitle: "patient's id"

%br

= form_for([@patient, @note]) do |n|
  =n.text_area :note , style: "font-size: 25px; height: 200px; margin: 20px; width: 80% "
  =n.submit  class: 'btn btn-primary btn-lg', style: 'margin: 20px'



