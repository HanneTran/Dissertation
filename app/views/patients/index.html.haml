
= simple_form_for :search,style:'float:centre', url: search_patients_path, method: :post do |f|
  = f.input :name
  = f.submit 'Search'
  = link_to 'Reset', patients_path
%br 

%p There are #{@patients.size} patients in the database.
%table.table.table-bordered.table-hover
  %thead
    %tr
      %th Name
      %th Category
  %tbody
    - @patients.each do |patient|
      %tr
        %td= patient.name
       
        %td= patient.category_type
      
        %td= link_to 'Show', patient

= video_tag "v1.mp4", :size => "600x600", :controls => true
